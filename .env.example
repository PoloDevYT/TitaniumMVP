# Porta do servidor HTTP
PORT=3000

# Credenciais do JWT (altere em produção)
JWT_SECRET=change-this-secret
JWT_EXPIRES_IN=24h

# Segurança de senha
BCRYPT_SALT_ROUNDS=10

# CORS (separe múltiplos domínios por vírgula). Deixe vazio para permitir tudo em dev.
CORS_ORIGIN=http://localhost:3000

# Controles de ambiente
NODE_ENV=development
ALLOW_MOCK_UPGRADE=true

# Dados do usuário administrador criado pelo script de setup
ADMIN_EMAIL=admin@titanium.local
ADMIN_PASSWORD=changeme-admin
ADMIN_NAME=Administrator
ADMIN_PLAN=black
